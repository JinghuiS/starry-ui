{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "composite": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@starry-ui/*": ["packages/*"]
    }
  },
  "exclude": ["**/temp/", "**/.*/", "**/lib", "**/node_modules"]
}
